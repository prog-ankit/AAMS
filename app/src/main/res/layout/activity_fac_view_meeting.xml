<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Faculty.fac_view_meeting">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/meetingdesc"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:fontFamily="@font/amaranth"
           />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2" >

                <TableRow>
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Date:"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth"
                        android:paddingRight="15dp"
                        />

                    <TextView
                        android:id="@+id/txt_date_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Date"
                        android:textSize="16sp"
                        android:fontFamily="@font/amaranth"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Time:"
                        android:fontFamily="@font/amaranth"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_time_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/amaranth"
                        android:hint="Time"
                        android:textSize="16sp"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/txt_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Topic:"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:fontFamily="@font/amaranth"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_topic_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Topic"
                        android:textSize="16sp"
                        android:fontFamily="@font/amaranth"
                        />
                </TableRow>


                <!--<TableRow>
                    <TextView
                        android:id="@+id/txt_organizer"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Organizer:"
                        android:paddingRight="15dp"
                        android:textColor="#2196F3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_organizer_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Organizer"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>-->

                <TableRow>
                    <TextView
                        android:id="@+id/txt_room"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Room Number:"
                        android:paddingEnd="30dp"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/amaranth"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_room_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Room Number"
                        android:textSize="16sp"
                        android:fontFamily="@font/amaranth"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Description:"
                        android:textColor="#2196F3"
                        android:fontFamily="@font/amaranth"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_span="2"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/txt_description_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:hint="Description"
                        android:textSize="16sp"
                        android:layout_span="2"
                        android:fontFamily="@font/amaranth"
                        />
                </TableRow>

            </TableLayout>

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>