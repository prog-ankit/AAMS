<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.apply_leave">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"/>

    </LinearLayout>



    <!-- Components Work-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/applyleave"
            android:fontFamily="@font/amaranth"

            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="24sp"
         />
        <!-- From Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/blue"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:fontFamily="@font/amaranth"
                android:hint="Start Date"
                android:editable="false"
                android:ems="10"
                android:autofillHints="auto" />

        </LinearLayout>

        <!-- To Date -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">


            <EditText
                android:id="@+id/to_date"
                android:hint="To Date"
                android:backgroundTint="@color/blue"
                android:textSize="16sp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_date"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:editable="false"
                android:ems="10"
                android:autofillHints="auto" />

        </LinearLayout>

        <!-- To Date -->



        <!--Selcting faculty-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <Spinner
                android:id="@+id/appliedfaculty"
                android:layout_width="340dp"
                android:layout_height="50dp"

                android:fontFamily="@font/amaranth"
                android:background="@drawable/spinner_style_all"

                android:paddingTop="15dp"
                android:paddingBottom="15dp" />
        </LinearLayout>

        <!--Selcting Reason-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Spinner
                android:id="@+id/reason"
                android:layout_width="340dp"
                android:layout_height="50dp"

                android:fontFamily="@font/amaranth"
                android:background="@drawable/spinner_style_all"
                android:entries="@array/reason" />
        </LinearLayout>


        <!--EditText Description-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_description"
                android:drawablePadding="10dp"
                android:hint="Description"
                android:maxLines="6"
                android:fontFamily="@font/amaranth"
                android:inputType="textMultiLine" />

        </LinearLayout>



        <!-- Apply Leave Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"

            android:gravity="center">

            <android.widget.Button
                android:id="@+id/applyleavebtn"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/amaranth"
                android:background="@drawable/buttondesign"
                android:text="Apply Leave"
                android:textColor="@color/white"
                android:textSize="16sp">
            </android.widget.Button>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>