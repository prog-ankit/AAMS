<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Faculty.manage_leave">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/main_toolbar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manageLeave"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/amaranth"
            android:textColor="@color/blue"
            android:textSize="24sp"
         />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/hint_enroll"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="Enrollment:"
                android:fontFamily="@font/amaranth"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_enroll"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Enrollment"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/no_from"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="From:"
                android:fontFamily="@font/amaranth"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/manage_from_date"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Start date"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txt_to"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="To:"
                android:fontFamily="@font/amaranth"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/manage_to_date"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="End date"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/no_facultyName"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:fontFamily="@font/amaranth"
                android:text="Counselor Name:"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/manage_facultyName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="Counselor Name"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/no_status"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:fontFamily="@font/amaranth"
                android:text="Status:"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/manage_status"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="@font/amaranth"
                android:hint="Pending"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/no_reason"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Reason:"
                android:textColor="#2196F3"
                android:fontFamily="@font/amaranth"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/manage_reason"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Reason"
                android:fontFamily="@font/amaranth"
                android:layout_weight="1"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_desc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Description:"
                android:fontFamily="@font/amaranth"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/manage_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:hint="Description"
                    android:textSize="16sp" />

            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>