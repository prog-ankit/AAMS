<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">

    </style>


    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>

    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="exampleToast">
        <item name="colorOnBackground">#94ffab</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="stLength">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>
</resources>